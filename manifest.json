{
  "manifest_version": 2,
  "name": "Chatimon",
  "description": "Allows you to communicate with people.",
  "version":"1.0",
  "background":{
    "scripts": ["main.js"],
    "persistent": false
  },
  "browser_action":{
    "default_icon": "./public/img/logo.png",
    "default_popup": "./public/popup/popup.html"
  },
    "permissions": ["alarms"]
}